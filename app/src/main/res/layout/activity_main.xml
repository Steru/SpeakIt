<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.edu.pwr.speakit.MainActivity"
    >

    <Button
        android:id="@+id/recognize_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/recognize"
        android:onClick="startRecognition"
        />

    <TextView
        android:id="@+id/recognized_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recognize_btn"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_marginTop="50dp"
        android:id="@+id/telephone_number_edit_text"
        android:layout_below="@id/recognized_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        />

    <Button
        android:id="@+id/temp_call_btn"
        android:layout_below="@id/telephone_number_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Call"
        android:onClick="makeCall"
        />

    <Button
        android:id="@+id/smsSendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send SMS"
        android:layout_below="@+id/temp_call_btn"
        android:layout_centerHorizontal="true"
        android:onClick="sendSMS"
        />


    <Button
        android:id="@+id/launchAppButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch app"
        android:layout_below="@+id/smsSendButton"
        android:layout_centerHorizontal="true"
        android:onClick="launchApp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXECUTE COMMAND GENERATION"
        android:layout_below="@+id/launchAppButton"
        android:layout_centerHorizontal="true"
        android:onClick="executeGeneratingCommands"
        />


</RelativeLayout>
